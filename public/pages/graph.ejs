<div class="row">
    <div class="col-md-5">
        <ui-select ng-model="dept.selected" id="searchBar" class="leftGraph" on-select="reloadGraph()"
                   theme="bootstrap"
                   reset-search-input="false">
            <ui-select-match placeholder="Select department...">{{dept.selected}}</ui-select-match>
            <ui-select-choices refresh="funcAsync($select.search)" position='down' refresh-delay="0"
                               repeat="dept in availableDept | filter:$select.search">
                {{dept}}
            </ui-select-choices>
        </ui-select>

        <br/>

        <div id="nodeGraph" class="leftGraph"></div>
    </div>

    <div class="col-md-5 col-md-offset-2">

        <ui-select ng-model="compareDebt.selected" id="searchBar" class="rightGraph" class="compareSearchBar"
                   on-select="reloadCompareGraph()" theme="bootstrap" reset-search-input="false">
            <ui-select-match placeholder="Select department...">{{compareDebt.selected}}</ui-select-match>
            <ui-select-choices refresh="funcAsync($select.search)" position='down' refresh-delay="0"
                               repeat="dept in availableDept | filter:$select.search">
                {{dept}}
            </ui-select-choices>
        </ui-select>

        <br/>

        <div id="compareNodeGraph" class="rightGraph"></div>
    </div>
</div>