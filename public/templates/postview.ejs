<div class="container-fluid col-md-8 col-md-offset-2">
    <h2>Discussions</h2>
    <hr />
    <div ng-repeat="post in posts | orderBy:'-time'">
        <!-- ng-hide hides elements when angular expression evaluates to true -->
        <h4>
        <span>
        <!-- When iterating over an array (posts), ng-repeat makes $index variable available along with each
        item in the array -->
        <a href="#/posts/{{post._id}}">{{post.title}}</a>
        </span>

        <span ng-show="post.author">
        posted by <a href="#/users/{{post.author}}">{{post.author}}</a> at
            {{post.time | date:"dd-MM-yyyy:H-mm-ss"}}
        </span>
        </h4>
    </div>

