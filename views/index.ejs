<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Webapps</title>

    <link href="https://maxcdn.bootstrapcdn.com/bootswatch/3.3.6/flatly/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-XYCjB+hFAjSbgf9yKUgbysEjaVLOXhCgATTEBpCqT1R3jvG5LGRAK5ZIyRbH5vpX" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/angular-ui-select/0.17.1/select.min.css">
    <!-- Angular Material style sheet -->
    <link rel="stylesheet"
          href="http://ajax.googleapis.com/ajax/libs/angular_material/1.1.0-rc2/angular-material.min.css">

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.4/jquery.min.js"></script>
    <!--  <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.3.10/angular.min.js"></script>-->

    <!-- Angular Material requires Angular.js Libraries -->
    <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.5.3/angular.min.js"></script>
    <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.5.3/angular-animate.min.js"></script>
    <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.5.3/angular-aria.min.js"></script>
    <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.5.3/angular-messages.min.js"></script>

    <!-- Angular Material Library -->
    <script src="http://ajax.googleapis.com/ajax/libs/angular_material/1.1.0-rc2/angular-material.min.js"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/angular-sanitize/1.5.6/angular-sanitize.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/angular-ui-select/0.17.1/select.min.js"></script>
    <script src="http://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.10/angular-ui-router.js"></script>
    <script src="http://cdnjs.cloudflare.com/ajax/libs/numeric/1.2.6/numeric.min.js"></script>
    <script src="http://d3js.org/d3.v3.js"></script>
    <script src="https://cdn.plot.ly/plotly-latest.min.js"></script>

    <!-- Full page scroller -->
    <script type="text/javascript"
            src="https://cdnjs.cloudflare.com/ajax/libs/fullPage.js/2.8.0/jquery.fullPage.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/fullPage.js/2.8.1/jquery.fullPage.min.css">
    <script src="/vendor/angular-fullpage.min.js"></script>


    <!-- Main angular app -->
    <script src="/js/app.js"></script>

    <!-- Timeline (https://timeline.knightlab.com) -->
    <link title="timeline-styles" rel="stylesheet"
          href="https://cdn.knightlab.com/libs/timeline3/latest/css/timeline.css">
    <script src="https://cdn.knightlab.com/libs/timeline3/latest/js/timeline-min.js"></script>

    <!-- Graph -->
    <link rel="stylesheet" href="http://www.w3schools.com/lib/w3.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link href="../stylesheets/graph.css" rel="stylesheet">

    <!-- Notifications -->
    <script src="/vendor/ngNotificationsBar.min.js"></script>
    <link rel="stylesheet" href="/vendor/ngNotificationsBar.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/3.5.2/animate.min.css">

    <style>
        .glyphicon-thumbs-up {
            cursor: pointer
        }

        body {
            padding-top: 60px;
        }

        p {
            font-size: 18px !important;
        }
    </style>
</head>
<body ng-app="webapps">

<nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
    <div class="container-fluid">
        <div class="navbar-header">
            <a class="navbar-brand" ui-sref="home">Webapps</a>
        </div>

        <div>
            <ul class="nav navbar-nav navbar-left">
                <li ui-sref-active="active"><a ui-sref="home">Home</a></li>
                <!--<li ui-sref-active="active"><a ui-sref="chronodata">Chronology</a></li>-->
                <li ui-sref-active="active"><a ui-sref="department">Department analysis</a></li>
                <li ui-sref-active="active"><a ui-sref="role">Role analysis</a></li>
                <li ui-sref-active="active"><a ui-sref="postview">Discussions</a></li>
            </ul>
        </div>

        <!-- Logout button should take the user to the home screen -->

        <ul class="nav navbar-nav navbar-right" ng-controller="NavCtrl">
            <li ng-show="isLoggedIn()"><a href="#/users/{{currentUser()}}">{{currentUser()}}</a></li>
            <li ng-show="isLoggedIn()"><a href="/#/home" ng-click="logOut()">Log out</a></li>
            <li ng-hide="isLoggedIn()"><a href="/#/login">Sign in</a></li>
            <li ng-hide="isLoggedIn()"><a href="/#/register">Register</a></li>
        </ul>
    </div>
</nav>

<div class="container-fluid">
    <notifications-bar class="notifications"></notifications-bar>
    <div class="row">
        <!-- Allows for multiple named views -->
        <div class="col-md-12" ui-view="main"></div>
        <div class="col-md-12" ui-view="footer"></div>
    </div>
</div>
</body>
</html>
