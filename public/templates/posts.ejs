<div class="container-fluid col-md-8 col-md-offset-2">
    <div class="page-header">
        <div class="row">
            <div class="col-md-6">
                <h3> {{post.title}} </h3>
            </div>
            <div class="col-md-6 text-right">
                <form ng-submit="deletePost()" ng-show="userMatch()">
                    <button type="submit" class="btn btn-danger btn-sm">Delete post</button>
                    <a href='#/view' class="btn btn-link">Go back</a>
                </form>
            </div>
        </div>
        <hr/>
        <div class="row">
            <div class="col-md-6">
                <h4>{{post.leftSubCat}}</h4>
                <div id="nodeGraph" class="leftGraph"></div>
            </div>
            <div class="col-md-6">
                <h4>{{post.rightSubCat}}</h4>
                <div id="compareNodeGraph" class="rightGraph"></div>
            </div>
        </div>

        <hr/>

    </div>

    <div ng-repeat="comment in post.comments | orderBy:'-upvotes'">
        <div class="row">
            <div class="col-md-10">
                Posted by <a href="#/users/{{comment.author}}">{{comment.author}}</a> :

                <span style="margin-left:5px;">
                    {{comment.body}}
                </span>
            </div>
            <div class="col-md-2 text-right">
                <form ng-submit="deleteComment(comment)" ng-show="userMatch()">
                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                </form>
            </div>
        </div>

        <hr/>

        <form ng-submit="addComment()" ng-show="isLoggedIn()" style="margin-top:30px;">
            <h4>Add a new comment</h4>

            <div class="form-group">
                <input type="text"
                       class="form-control"
                       placeholder="Comment"
                       ng-model="body">
            </div>
            <button type="submit" class="btn btn-primary">Post</button>
        </form>

        <div ng-hide="isLoggedIn()">
            <h5>Please kindly login before adding a comment</h5>
        </div>
    </div>